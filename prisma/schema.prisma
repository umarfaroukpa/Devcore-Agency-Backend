generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

enum UserRole {
  SUPER_ADMIN  // Full system access
  ADMIN        // Limited admin access
  DEVELOPER
  CLIENT
}

enum ProjectStatus {
  PENDING
  IN_PROGRESS
  REVIEW
  COMPLETED
  CANCELLED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
}

enum ActivityType {
  USER_CREATED
  USER_APPROVED
  USER_DELETED
  USER_UPDATED
  PROJECT_CREATED
  PROJECT_UPDATED
  PROJECT_DELETED
  TASK_CREATED
  TASK_ASSIGNED
  TASK_UPDATED
  TASK_COMPLETED
  ROLE_CHANGED
}

model User {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String
  firstName   String?
  lastName    String?
  phone       String?
  role        UserRole  @default(DEVELOPER)
  avatar      String?
  isActive    Boolean   @default(true)
  isApproved  Boolean?
  companyName String?
  industry    String?
  position    String?
  skills      String?
  portfolio   String?
  experience  String?
  githubUsername String?
  
  // Admin management fields
  approvedBy  String?
  approvedAt  DateTime?
  createdBy   String?   // Who created/invited this user
  invitedBy   String?   // For tracking admin invitations
  
  // Permissions (for ADMIN role)
  canApproveUsers     Boolean @default(false)
  canDeleteUsers      Boolean @default(false)
  canManageProjects   Boolean @default(false)
  canAssignTasks      Boolean @default(false)
  canViewAllProjects  Boolean @default(false)
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  // Relations
  assignedTasks     Task[]          @relation("AssignedDeveloper")
  createdTasks      Task[]          @relation("TaskCreator")
  memberships       ProjectMember[] 
  projects          Project[]       @relation("ClientProjects")
  activityLogs      ActivityLog[]   @relation("ActivityPerformer")
  notifications     Notification[]
  
  @@map("users")
}

model Service {
  id          Int      @id @default(autoincrement())
  title       String
  description String 
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  content   String
  createdAt DateTime @default(now())
}

model Project {
  id          String        @id @default(uuid())
  name        String
  description String?
  status      ProjectStatus @default(PENDING)
  startDate   DateTime?
  endDate     DateTime?
  clientName  String
  clientEmail String
  clientId    String 
  client      User          @relation("ClientProjects", fields: [clientId], references: [id], onDelete: Cascade)
  budget      Float?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  tasks       Task[]
  members     ProjectMember[]
  
  @@map("projects")
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(TODO)
  priority    String     @default("MEDIUM")
  projectId   String
  assignedTo  String?
  createdBy   String
  dueDate     DateTime?
  estimatedHours Int?
  actualHours    Int?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  
  project     Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?      @relation("AssignedDeveloper", fields: [assignedTo], references: [id], onDelete: SetNull)
  creator     User       @relation("TaskCreator", fields: [createdBy], references: [id], onDelete: Cascade)
  
  @@map("tasks")
}

model ProjectMember {
  id        String   @id @default(uuid())
  projectId String
  userId    String
  role      String   @default("Developer")
  joinedAt  DateTime @default(now())
  
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([projectId, userId])
  @@map("project_members")
}

model InviteCode {
  id          String    @id @default(uuid())
  code        String    @unique
  role        UserRole
  createdBy   String    // Admin who created the invite
  permissions Json?     // For ADMIN invites - store specific permissions
  used        Boolean   @default(false)
  usedBy      String?
  usedAt      DateTime?
  expiresAt   DateTime?
  createdAt   DateTime  @default(now())
}

// Activity logging for admin actions
model ActivityLog {
  id          String       @id @default(uuid())
  type        ActivityType
  performedBy String
  performer   User         @relation("ActivityPerformer", fields: [performedBy], references: [id], onDelete: Cascade)
  targetId    String?      // ID of affected resource
  targetType  String?      // 'user', 'project', 'task'
  details     Json?        // Additional details about the action
  ipAddress   String?
  createdAt   DateTime     @default(now())
  
  @@map("activity_logs")
}

// Notifications for users
model Notification {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  message     String
  type        String   // 'task_assigned', 'project_update', 'approval', etc.
  isRead      Boolean  @default(false)
  link        String?  // Optional link to related resource
  createdAt   DateTime @default(now())
  
  @@map("notifications")
}